---
import ClassesPreloader from '../components/ClassesPreloader.astro';
import Heading from '../components/Heading.astro';
import Or from '../components/Or.astro';
import CollapsedLink from '../components/buttons/CollapsedLink.astro';
import ExpandedLink from '../components/buttons/ExpandedLink.astro';
import EmailIcon from '../components/icons/EmailIcon.astro';
import FiverrIcon from '../components/icons/FiverrIcon.astro';
import FreelancerIcon from '../components/icons/FreelancerIcon.astro';
import LinkedInIcon from '../components/icons/LinkedInIcon.astro';
import UpworkIcon from '../components/icons/UpworkIcon.astro';
import SidemenuLayout from '../layouts/SidemenuLayout.astro';

const socialLinks = [{
    url: 'https://www.fiverr.com/stratis_derm',
    icon: FiverrIcon,
    text: 'Fiverr'
}, {
    url: 'https://www.linkedin.com/in/stratis-dermanoutsos',
    icon: LinkedInIcon,
    text: 'LinkedIn'
}, {
    url: 'https://www.upwork.com/freelancers/~0114743f3a4798b41c',
    icon: UpworkIcon,
    text: 'Upwork'
}, {
    url: 'https://www.freelancer.com/u/stratisderm',
    icon: FreelancerIcon,
    text: 'Freelancer'
}];
---

<SidemenuLayout title='Home'>
    <div class='flex flex-1 flex-col md:py-28 md:pr-4'>
        <div class='mb-8'>
            <Heading>Hi, I'm <span class='text-accent font-bold'>Stratis</span></Heading>
            <p class='text-txt-medium lg:text-2xl'>Welcome to my page</p>
        </div>
        <div class='flex flex-col gap-4 text-txt-medium'>
            <p class='lg:text-2xl'>Iâ€™m a <span class='text-accent font-bold'>Senior Software Developer</span> specialising in web and mobile apps.</p>
            <p class='lg:text-2xl'>In my free time, I am either contributing to Open-Source projects or working on my cars.</p>
        </div>
    </div>
    <div class='flex flex-1 flex-col items-center justify-between md:py-28'>
        <Heading class='text-center'>Want to hire me?</Heading>
        <div class='flex flex-col gap-4 items-center text-txt-medium'>
            <p>I strive to reply within an hour.</p>
            <ExpandedLink href='mailto:stratis.dermanoutsos@gmail.com'>
                <EmailIcon class='w-6 h-6 text-accent' />
                Email
            </ExpandedLink>
        </div>
        <Or class='px-20 md:px-4' />
        <div class='flex gap-4 items-center'>
            {socialLinks.map(item => (
                <CollapsedLink href={item.url}>
                    <item.icon class='w-6 h-6' slot='icon' />
                    {item.text}
                </CollapsedLink>
            ))}
        </div>
    </div>
    <ClassesPreloader />
</SidemenuLayout>
