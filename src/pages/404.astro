---
import CommonHead from '../components/CommonHead.astro';
import { SdIcon } from '../components/icons/icons';

const title = 'Not Found';
const route = Astro.url.pathname;
---

<html lang='en'>
    <CommonHead title={title} />
    <body class='bg-medium font-roboto h-screen w-screen'>
        <main class='flex flex-col h-full items-center justify-center w-full'>
            <SdIcon class='h-32 w-32 text-white mb-12' />
            <h1 class='font-extrabold leading-none text-txt-high text-4xl tracking-tight'>
                <span class='text-accent'>404</span>
                : Not found
            </h1>
            <pre class='text-txt-medium mt-4'>Path: {route}</pre>
        </main>
    </body>
</html>